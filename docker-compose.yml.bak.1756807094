version: '3'
services:
  webserver:
    build: ./
    image: tac-webserver
    container_name: tac-webserver-1
    tty: true
    ports:
      - '80:3000'              # host 80 -> container 3000
    volumes:
      - ./data:/app/data
    env_file:
      - .env                   # <-- injects your .env
    environment:
      - NODE_ENV=production
    restart: unless-stopped
